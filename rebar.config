{port_specs, [
    {"priv/khash.so", ["c_src/*.c"]}
]}.

{port_env, [
    % Development compilation
    % {".*", "CFLAGS", "$CFLAGS -g -Wall -Werror -fPIC"}

    % Production compilation
    {"(linux|solaris|darwin|freebsd)", "CFLAGS", "$CFLAGS -Wall -Werror -DNDEBUG -O3"},
    {"win32", "CFLAGS", "$CFLAGS /O2 /DNDEBUG /Wall"}
]}.

{plugins, [{pc, "~> 1.0"}]}.
{artifacts, [
    "priv/khash.so"
]}.
{provider_hooks, [
    {post, [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
    ]}
]}.
